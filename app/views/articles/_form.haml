= form_for @article do |f|
  - if @article.errors.any?
    %div{ :class => 'errors' }
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg
  = f.label :author
  = f.text_field :author
  %br
  = f.label :title
  = f.text_field :title
  %br
  = f.label :text
  = f.text_area :text
  %br
  = f.submit

= link_to "Back", articles_path